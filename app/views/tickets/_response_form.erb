<%= form_for(@ticket_response) do |f| %>
  <% if @ticket_response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket_response.errors.count, "error") %> prohibited this ticket from being sent:</h2>

      <ul>
      <% @ticket_response.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :body, :rows => 6 %>
  </div>
    <%= f.hidden_field :ticket_id, :value => @ticket.id %>
    <%= f.hidden_field :requester_id, :value => @ticket.requester_id %>
  <div class="actions">
	<div class="btn-group">
	  <%= f.submit "Send reply", :class => 'btn btn-success' %>
	    
	  <button class="btn">Action</button>
	  <button class="btn dropdown-toggle" data-toggle="dropdown">
	    <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu">
	    <li><a tabindex="-1" href="/tickets/close/<%= @ticket.id %>">Close</a></li>
	    <li><a tabindex="-1" href="#">Another action</a></li>
	    <li><a tabindex="-1" href="#">Something else here</a></li>
	    <li class="divider"></li>
	    <li><a tabindex="-1" href="#">Separated link</a></li>
	  </ul>
	</div>

  </div>
<% end %>
