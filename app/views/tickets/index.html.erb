<h1>Current Tickets</h1>

<table class="table">
  <tr>
    <th>Subject</th>
    <th>Requester</th>
    <th>State</th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= link_to ticket.subject, ticket %></td>
    <td><%= ticket.requester.email_address %></td>
    <td><%= ticket.state %></td>
  </tr>
<% end %>
</table>

<br />

<a href="<%= new_ticket_path %>"><button class="btn btn-primary" type="button">New Ticket</button></a>